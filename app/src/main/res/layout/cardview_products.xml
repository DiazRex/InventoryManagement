<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="#1"
                android:textColor="@color/bgColorPrimary"
                android:textSize="66dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorPrimary"
                android:layout_toRightOf="@+id/pid"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="PRODUCT TITLE"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/pcategory"
                android:layout_below="@+id/ptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorPrimary"
                android:layout_toRightOf="@+id/pid"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="CATEGORY"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/pquantity"
                android:layout_below="@+id/pcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bgColorPrimary"
                android:layout_toRightOf="@+id/pid"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="QUANTITY"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/pprice"
                android:layout_below="@+id/pquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:layout_toRightOf="@+id/pid"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="Price: $0"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
